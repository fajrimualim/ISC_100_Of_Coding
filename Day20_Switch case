package Day3;

import java.util.Scanner;

public class Day20 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int pilihan;
        double luas = 0;

        // Menampilkan pilihan kepada pengguna
        System.out.println("Pilih bentuk geometri:");
        System.out.println("1. Persegi");
        System.out.println("2. Segitiga");
        System.out.println("3. Lingkaran");
        System.out.println("4. Persegi Panjang");
        System.out.print("Masukkan pilihan (1/2/3/4): ");
        pilihan = input.nextInt();

        switch (pilihan) {
            case 1:
                double s;
                System.out.print("Masukkan panjang sisi persegi: ");
                s = input.nextDouble();
                luas = s * s;
                break;
            case 2:
                double a, t;
                System.out.print("Masukkan alas segitiga: ");
                a = input.nextDouble();
                System.out.print("Masukkan tinggi segitiga: ");
                t = input.nextDouble();
                luas = 0.5 * a * t;
                break;
            case 3:
                double r;
                System.out.print("Masukkan jari-jari lingkaran: ");
                r = input.nextDouble();
                luas = Math.PI * r * r; // Menggunakan nilai Ï€ dari Math.PI
                break;
            case 4:
                double p, l;
                System.out.print("Masukkan panjang persegi panjang: ");
                p = input.nextDouble();
                System.out.print("Masukkan lebar persegi panjang: ");
                l = input.nextDouble();
                luas = p * l;
                break;
            default:
                System.out.println("Pilihan tidak valid.");
                break;
        }

        if (pilihan >= 1 && pilihan <= 4) {
            // Menampilkan hasil luas
            System.out.println("Luas bentuk geometri yang dipilih adalah: " + luas);
        }
    }
}
