package Day3;

import java.util.Arrays;

public class Day37 {

    public static void main(String[] args) {
        int[] array = {5, 2, 8, 9, 1, 3};

        System.out.println("Array sebelum diurutkan: " + Arrays.toString(array));

        Arrays.sort(array);
        System.out.println("Array setelah diurutkan: " + Arrays.toString(array));

        int max = array[array.length - 1];
        System.out.println("Nilai maksimum dalam array: " + max);

        for (int i = 0; i < array.length; i++) {
            array[i] *= 2;
        }
        System.out.println("Array setelah setiap elemen digandakan: " + Arrays.toString(array));
    }
}
